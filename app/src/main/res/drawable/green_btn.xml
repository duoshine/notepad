<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed the button status -->
        <shape>
            <!-- 开始颜色="" 结束颜色="" 颜色渐变="" -->
            <gradient android:angle="270" android:endColor="#52cf0f" android:startColor="#52cf0f" />
            <!-- //渐变方向     按钮边缘="" 边缘宽="" -->
            <stroke android:width="1sp" android:color="#52cf0f" />
            <!-- //边缘颜色   按钮四个圆角="" -->
            <corners android:radius="25dp" />
            <!-- //半径    内边距="" 按钮文字和边缘距离="" -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"> <!-- get the focus button sttaus -->
        <shape>
            <gradient android:angle="270" android:endColor="#52cf0f" android:startColor="#52cf0f" />

            <stroke android:width="1sp" android:color="#52cf0f" />

            <corners android:radius="25dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item > <!-- get the focus button sttaus -->
        <shape>
            <gradient android:angle="270" android:endColor="#4BBB0E" android:startColor="#4BBB0E" />

            <stroke android:width="1sp" android:color="#4BBB0E" />

            <corners android:radius="25dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>